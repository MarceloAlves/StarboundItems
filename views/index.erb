  </head>
  <body>
<div ng-app>
    <div ng-controller="ItemListCtrl">
      <h1>Starbound Items</h1>
      <div class="col-xs-3">
        <input type="text" ng-model="search.itemName" class="form-control" placeholder="Search">
      </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Item</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="item in items | filter:search">
                <td>{{item.itemName}}</td>
                <td>{{item.description}}</td>
            </tr>
          </tbody>
        </table>
    </div>
</div>
  </body>
  </html>