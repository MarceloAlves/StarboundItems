<!doctype html>
<html>
  <head>
    <title>Starbound Items - Stats</title>
    <meta name="description" content="Searchable list of items in Starbound" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/superhero/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/custom.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.js"></script>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-47315066-1', 'starbounditems.herokuapp.com');
    ga('send', 'pageview');

  </script>
  <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
  </head>
  <body>
    <div id="wrap">
      <div class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="http://starbounditems.herokuapp.com">Starbound Items</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/all">All Items</a></li>
              <li><a href="/stats">Stats</a></li>
              <li><a href="https://github.com/MarceloAlves/StarboundItems"><i class="fa fa-github fa-2x"></i></a></li>
            </ul>
          </div>
      </div>
      <div class="container">
        <table class="table table-striped">
          <thead>
              <tr>
                <th>Icon</th>
                <th>Item</th>
                <th>Name</th>
                <th>Description</th>
                <th>Rarity</th>
                <th>Type</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td>
                    <% if item["inventoryIcon"] %>
                      <img src="/images/icons/<%= item["inventoryIcon"] %>" height="20">
                    <% end %>
                  </td>
                  <td><%= item["itemName"] %></td>
                  <td><%= item["shortdescription"] %></td>
                  <td><%= item["description"] %></td>
                  <td class="<%= rarity(item["rarity"]) %>"><span class="item-rarity"><%= item["rarity"] %></span></td>
                  <td><span class="item-type"><%= item["type"] %></span></td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <div class="col-md-12 text-center">
          <ul class="pagination pagination-sm">
            <% if @prev_page >= 1 %>
            <li><a href="<%= @prev_page %>">&laquo;</a></li>
            <% end %>
            <% (1..@total_items).each_slice(200).with_index do |c, index| %>
              <li class="<%= @current_page == index+1 ? "active" : "" %>">
                <a href="/all<%= "/#{index+1}" unless index == 0 %>"><%= index + 1 %></a>
              </li>
            <% end %>
            <% if @current_page < @last_page %>
                <li><a href="<%= @next_page %>">&raquo;</a></li>    
              <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div id="footer">
      <div class="container">
          <p class="text-muted pull-left">Game content and materials are trademarks and copyrights of their respective publisher and its licensors. All rights reserved.</p>
          <p class="text-muted pull-right">Database Last Updated: Nov 23 2014 - <a href="https://github.com/MarceloAlves/StarboundItems/issues">Feedback</a></p>
      </div>
    </div>
    <script type="text/javascript">
      var _sf_async_config = { uid: 57088, domain: 'starbounditems.herokuapp.com', useCanonical: true };
      (function() {
        function loadChartbeat() {
          window._sf_endpt = (new Date()).getTime();
          var e = document.createElement('script');
          e.setAttribute('language', 'javascript');
          e.setAttribute('type', 'text/javascript');
          e.setAttribute('src','//static.chartbeat.com/js/chartbeat.js');
          document.body.appendChild(e);
        };
        var oldonload = window.onload;
        window.onload = (typeof window.onload != 'function') ?
          loadChartbeat : function() { oldonload(); loadChartbeat(); };
      })();
    </script>
  </body>
  </html>